<section class="current-conditions">
  <header>
    <h1><%= @weather.measurements.first.location %></h1>
  </header>
  <section class="primary">
    <div class="current">
      <p class="temp"><%= degrees @weather.now.temperature %></p>
      <p class="condition"><%= condition_name @weather.now.icon %></p>
    </div>
    <div class="radar">
      <%= image_tag radar_url(@latitude, @longitude) %>
    </div>
  </section>
  <ul class="clearfix">
    <li><strong>Wind</strong> <%= @weather.now.wind %></li>
    <li><strong>Dew Point</strong> <%= degrees @weather.now.dew_point %></li>
    <li><strong>Visibility</strong> <%= @weather.now.visibility %></li>
    <li><strong>Sunrise</strong> <%= format_time @weather.now.sun.rise %></li>
    <li><strong>Sunset</strong> <%= format_time @weather.now.sun.set %></li>
    <li><strong>Pressure</strong> <%= @weather.now.pressure %></li>
  </ul>
</section>

<table class="forecast">
  <thead>
    <tr>
      <% @weather.forecast.each do |forecast| %>
        <th><%= forecast.date.strftime("%a") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @weather.forecast.each do |forecast| %>
        <td>
          <span class="high"><%= degrees forecast.high %></span>
          <span class="low"><%= degrees forecast.low %></span>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
